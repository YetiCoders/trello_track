.page_main
  .content_block
    .clearfix
      .pull-left
        %h3
          .fa.fa-users
          = t ".my_organizations"

      .pull-right
        = link_to "#", class: "btn btn-primary" do
          .fa.fa-cog
          = t(".set_up_following")

    .organizations
      - @organizations.each_slice(3) do |organizations|
        .row
          - organizations.each do |organization|
            .organization.col-md-4
              %h4= organization.display_name

              .members
                - organization.members.each do |member|
                  .member.clearfix
                    .follow_status.pull-left
                      .fa.fa-eye
                    = username_with_avatar(member)