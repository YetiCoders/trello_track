.cards.clearfix
  - @cards.each do |card|
    .card{ "data-trello-url" => card.url}
      .card_inner
        .name= card.name
        .board_and_column
          = @card_boards[card.board_id].name
          \/
          = @card_lists[card.list_id].name
        .info.clearfix
          .pull-left.details
            -#.detail.follow
              .fa.fa-eye
            -#.detail.description
              .fa.fa-pencil
            -#.detail.comment
              .fa.fa-comment
              3
            -#.detail.checklist.done
              .fa.fa-list
              5/5
          .pull-right.assigned_members
            - card.member_ids.each do |member_id|
              = user_avatar(@members[member_id], :small)

        .date
          = t(".changed")
          = card.last_activity_date.strftime "%b %d at %H:%M"

